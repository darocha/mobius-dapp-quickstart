{% extends 'base.html.twig' %}

{% block body %}

<div class="container mt-3">
    {% if app.session.flashbag.peekAll() is not empty %}
        <div class="row">
            {% for message in app.flashes('success') %}
                <div class="alert alert-success border-success" role="alert">
                    {{ message }}
                </div>
            {% endfor %}

            {% for message in app.flashes('error') %}
                <div class="alert alert-danger border-danger" role="alert">
                    {{ message }}
                </div>
            {% endfor %}
        </div>
    {% endif %}

    <div class="row">
        <div class="col-sm">
            <div>
                Logged in as: <b>{{ mobiusUser.mobiusEmail }}</b>
            </div>
            <div>
                Balance: <mark>{{ mobiusUser.balance }}</mark>
            </div>

            <div class="mt-3">
                <span>Flip a coin: </span>
                <form method="POST" action="{{ path('coinFlipDo') }}">
                    <input type="hidden" name="email" value="{{ mobiusUser.mobiusEmail }}">
                    <button name="guess" value="0" style="margin-right: 50px;">Heads</button>
                    <button name="guess" value="1">Tails</button>
                </form>
            </div>
        </div>
    </div>

</div>
{% endblock %}
